---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Services - Dental Billing Solutions',
  description: 'Comprehensive dental billing services including insurance verification, claims processing, and full-service billing solutions.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget -->
  <Hero
    tagline="Our Services"
    title="Comprehensive Dental Billing Solutions"
    subtitle="Professional services to optimize your practice's revenue cycle and streamline operations."
    image={{
      src: '~/assets/images/Dental_billing.jpg',
      alt: 'Dental billing services',
    }}
  />

  <!-- Main Services -->
  <Features
    title="Our Core Services"
    subtitle="Expert solutions for your dental practice"
    columns={3}
    items={[
      {
        title: 'Dental Billing',
        description: 'Complete billing services including claims submission, payment posting, and AR management.',
        icon: 'tabler:file-invoice',
        callToAction: {
          text: 'Learn More',
          href: '/services/dental-billing',
        },
      },
      {
        title: 'Insurance Verification',
        description: 'Real-time eligibility checks and comprehensive benefits verification.',
        icon: 'tabler:certificate',
        callToAction: {
          text: 'Learn More',
          href: '/services/insurance-verification',
        },
      },
      {
        title: 'Claims Processing',
        description: 'Expert claims submission and follow-up for maximum reimbursement.',
        icon: 'tabler:file-check',
        callToAction: {
          text: 'Learn More',
          href: '/services/claims-processing',
        },
      },
    ]}
  />

  <!-- Additional Services -->
  <Features
    title="Additional Services"
    subtitle="Supporting your practice's success"
    columns={2}
    items={[
      {
        title: 'Credentialing',
        description: 'Provider credentialing and enrollment services with insurance companies.',
        icon: 'tabler:id',
      },
      {
        title: 'Practice Analysis',
        description: 'Detailed financial reporting and practice performance analysis.',
        icon: 'tabler:chart-bar',
      },
    ]}
  />

  <!-- Benefits -->
  <Features
    title="Why Choose Us?"
    subtitle="Expert solutions for your dental practice"
    columns={3}
    items={[
      {
        title: 'Experience',
        description: 'Years of expertise in dental billing and insurance management.',
        icon: 'tabler:trophy',
      },
      {
        title: 'Dedicated Team',
        description: 'Your practice gets a dedicated billing specialist for consistent service.',
        icon: 'tabler:users',
      },
      {
        title: 'Cost Effective',
        description: 'Reduce overhead costs while maximizing collections.',
        icon: 'tabler:coin',
      },
      {
        title: 'Fast Processing',
        description: 'Quick turnaround on claims and verifications.',
        icon: 'tabler:clock',
      },
      {
        title: 'Compliance',
        description: 'HIPAA-compliant processes and secure data handling.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Technology',
        description: 'Modern software solutions for efficient processing.',
        icon: 'tabler:device-laptop',
      },
    ]}
  />

  <!-- Call to Action -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/contact',
        icon: 'tabler:message',
      },
      {
        text: 'View Pricing',
        href: '/pricing',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Optimize Your Practice?
    </Fragment>
    <Fragment slot="subtitle">
      Contact us today for a free consultation and learn how we can help improve your practice's revenue cycle.
    </Fragment>
  </CallToAction>
</Layout>
